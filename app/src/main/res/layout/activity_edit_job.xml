<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewJobRole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Role"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextJobRole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_underline"
        android:layout_below="@id/textViewJobRole"/>

    <TextView
        android:id="@+id/textViewCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company"
        android:layout_below="@id/editTextJobRole"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_underline"
        android:layout_below="@id/textViewCompany"/>

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_below="@id/editTextCompany"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editTextLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_underline"
        android:layout_below="@id/textViewLocation"/>

    <TextView
        android:id="@+id/textViewStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_below="@id/editTextLocation"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"/>

    <Spinner
        android:id="@+id/spinnerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_underline"
        android:layout_below="@id/textViewStatus"/>

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerStatus"
        android:layout_marginTop="16dp"
        android:text="Save" />

</RelativeLayout>
